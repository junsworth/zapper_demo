<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.ap.zapper.fragments.DetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/linear_layout_profile_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/profile_image_margin_top"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/image_view_profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/first_last_name"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/linear_layout_profile_image">

        <TextView
            android:id="@+id/firstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FirstNameLabel" />

        <TextView
            android:id="@+id/lastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LastNameLabel" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/first_last_name"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FirstNameLabel" />

        <TextView
            android:id="@+id/favourite_colour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LastNameLabel" />

    </LinearLayout>


</RelativeLayout>
